<?xml version="1.0" encoding="UTF-8"?>
<configuration level="INFO">
	<property name="HOME_ROLLLOG" value="../applog/use-web-service"/>
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="FILE-ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${HOME_ROLLLOG}/use-web-service.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${HOME_ROLLLOG}/use-web-service.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<!-- each archived file, size max 10MB -->
			<maxFileSize>200MB</maxFileSize>
			<!-- total size of all archive files, if total size > 20GB, it will delete old archived file -->
			<totalSizeCap>20GB</totalSizeCap>
			<!-- 60 days to keep -->
			<maxHistory>60</maxHistory>
		</rollingPolicy>

		<encoder>
			<pattern>%d %p %c{1.} [%t] %m%n</pattern>
		</encoder>
	</appender>

	<logger name="com.xinyin" level="INFO" additivity="false">
           <appender-ref ref="CONSOLE"/>
           <appender-ref ref="FILE-ROLLING"/>
    </logger>
    
    <logger name="org" level="INFO" additivity="false">
           <appender-ref ref="CONSOLE"/>
           <appender-ref ref="FILE-ROLLING"/>
    </logger>
    
	<root level="INFO">
		<appender-ref ref="CONSOLE"/>
		<appender-ref ref="FILE-ROLLING"/>
	</root>

</configuration>